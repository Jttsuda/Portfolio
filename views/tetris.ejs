<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="/css/tetris.css">
<script src="/js/tetris.js" defer></script>

<!-- Tetris Game HTML -->
<div id="tetris-block">
    <div id="tetris-content">
        <div id="tetris-title-div">
            <h1 id="tetris-title">Tetris</h1>
            <h2 id="tetris-score">Score:<span id="score">0</span></h2>
        </div>

        <div class="container">
            <!-- Grid Boxes -->
            <div class="grid">

                <h1 id="game-over"></h1>
            </div>
            <div class="mini-grid">
                <h2 id="up-next">Up Next</h2>
            </div>
        </div>
        <div class="tetris-buttons">
            <button id="start-button">New Game</button>
            <button id="pause-button">||</button>
        </div>
    </div>
</div>


<script>
    const navBtn = document.querySelector('.projects');
    navBtn.style.transition = 'color 0s';
    navBtn.style.color = 'var(--nav-text-hover)';
</script>
